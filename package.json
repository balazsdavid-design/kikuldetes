  "private": true,
  "dependencies": {
    "@sap/cds": "^9",
    "@sap/cds-common-content": "^2.1.0",
    "@sap/xssec": "^4.6.0",
    "blob-stream": "^0.1.3",
    "passport": "^0.7.0",
    "pdfmake": "^0.2.18",
    "soap": "^1.1.10",
    "xml2js": "^0.6.2",
    "@cap-js/hana": "^2"
  },
  "devDependencies": {
    "@cap-js/cds-test": "^0.3.0",
    "@cap-js/cds-types": "^0.12.0",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^9",
    "axios": "^1.9.0",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.2",
    "chai-subset": "^1.6.0",
    "jest": "^29.7.0",
    "mbt": "^1.2.29",
    "mocha": "^11.5.0",
    "rimraf": "^5.0.5",
    "sinon": "^20.0.0"
  },
  "scripts": {
    "test": "mocha test/*.test.js",
    "start": "cds-serve",
    "undeploy": "cf undeploy kikuldetesek --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-postingui": "cds watch --open postingui/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-adminpanel": "cds watch --open adminpanel/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "[test]": {
        "auth": "mocked",
        "users": {
          "david.balazs@msg-plaut.hu": {
            "roles": [
              "Backoffice"
            ]
          }
        }
      },
      "db": {
        "[test]": {
          "kind": "sqlite",
          "credentials": {
            "url": "./db/kikuldetesek.sqlite"
          }
        },
        "[production]": {
           "kind": "hana", "impl": "@cap-js/hana", "deploy-format": "hdbtable" 
        }
      },
      "destinations": true,
      "html5-runtime": true,
      "workzone": true,
      "[production]": {
        "auth": "xsuaa"
      }
    }
  },
  "mocha": {
    "recursive": true,
    "parallel": true,
    "timeout": 6666
  },
  "sapux": [
    "app/postingui",
    "app/adminpanel",
    "app/employeeteszt"
  ]
}
