<core:FragmentDefinition xmlns:plugins="sap.m.plugins" xmlns:upload="sap.m.upload" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:macros="sap.fe.macros">
	
		
		    <Table
        id="attachmentsTable"
        core:require="{ handler: 'postingui/ext/fragment/Uploader'}"
        items="{path: 'attachments', templateShareable: false}"
        mode="MultiSelect"
        selectionChange="handler.onSelectionChange">
        <headerToolbar>
            <OverflowToolbar id="_IDGenOverflowToolbar">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <upload:ActionsPlaceholder id="uploadButton" placeholderFor="UploadButtonPlaceholder" />
                <Button
                    id="downloadSelectedAttachments"
                    text="Download"
                    enabled="false"
                    press="handler.onDownloadFiles"
                />
                <Button
                    id="deleteSelectedAttachments"
                    text="Delete"
                    enabled="false"
                    press="handler.onDeleteFiles"
                />
            </OverflowToolbar>
        </headerToolbar>
        <dependents>
            <plugins:UploadSetwithTable id="_IDGenUploadSetwithTable"
                beforeUploadStarts="handler.onBeforeUploadStart"
                beforeInitiatingItemUpload="handler.onBeforeUploadInit"
                actions="uploadButton"
				httpRequestMethod="Put">
                
                    <upload:UploadItemConfiguration id="_IDGenUploadItemConfiguration"
                        fileNamePath="filename"
                        urlPath="url"
                        mediaTypePath="mimeType"/>
                
                
                    
               
            </plugins:UploadSetwithTable>
        </dependents>
        <columns>
            <Column id="fileName" importance="High">
                <header>
                    <Label id="_IDGenLabel" text="Name/Type" />
                </header>
            </Column>
            <Column id="url" importance="High" visible="false">
                <header>
                    <Label id="_IDGenLabel1" text="Url" />
                </header>
            </Column>
        </columns>
        <items>
            <ColumnListItem id="_IDGenColumnListItem">
                <HBox id="_IDGenHBox">
                    <Link id="_IDGenLink"
                        text="{filename}"
                        class="sapUiTinyMarginBottom"/>
                </HBox>
                <Text id="_IDGenText" text="{url}"/>

            </ColumnListItem>
        </items>
    </Table>
	
</core:FragmentDefinition>